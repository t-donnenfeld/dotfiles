# If not running interactively, don't do anything
[[ $- != *i* ]] && return

#base="#1e1e2e"
#text="#cdd6f4"
#green="#a6e3a1"
#blue="#89b4fa"
#mauve="#cba6f7"
#red="#f38ba8"
#yellow="#f9e2af"

# Prompt styling
# [user@host:cwd] â†’ with colors
PS1="\[\e[38;5;141m\]\u\[\e[0m\]@\[\e[38;5;111m\]\h\[\e[0m\]:\[\e[38;5;150m\]\w\[\e[0m\] \$ "

# Aliases
alias ls='ls --color=auto'
alias ll='ls -lah'
alias grep='grep --color=auto'
alias cat='batcat --theme="Catppuccin Mocha" 2>/dev/null || cat'
alias cp="cp -i"                          
alias df='df -h'                          
alias free='free -m'                      
alias more=less
alias l=ls
alias vim=nvim

# Binds

bind '"\C-f":"tmux-sessionizer\n"'
bind '"\C-g":"ssh-finder\n"'
bind '"\C-h":"sysdservice-finder\n"'

# PATH additions
PATH="$HOME/.local/bin:$PATH"
export PATH="$PATH":"$HOME/.local/scripts/"

# Catppuccin accent for less
export LESS_TERMCAP_mb=$'\E[01;35m'  # blink
export LESS_TERMCAP_md=$'\E[01;34m'  # bold
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[48;5;238;38;5;223m'  # standout
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;36m'  # underline

# Load bash completion if available
if [ -f /etc/bash_completion ]; then
  . /etc/bash_completion
fi


# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/theo/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/theo/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/theo/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/theo/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

export EDITOR=nvim
export VISUAL=nvim

# Added by zip-cracker installer
export PATH="/home/theo/.local/bin:$PATH"
